<section class="cd-horizontal-timeline">
  <div class="timeline">
    <div class="events-wrapper">
      <div class="events">
        <ol>
          <% @article.article_milestones.each_with_index do |milestone, i| %>
            <% if i == 0 %>
              <li>
                <%= link_to milestone.date_occurred.strftime("%b %d, %Y"), "#0", :'data-date' => milestone.date_occurred.strftime("%d/%m/%Y"), class: 'selected' %>
              </li>
            <% else %>
              <li>
                <%= link_to milestone.date_occurred.strftime("%b %d, %Y"), "#0", :'data-date' => milestone.date_occurred.strftime("%d/%m/%Y") %>
              </li>
            <% end %>
          <% end %>
        </ol>

        <span class="filling-line" aria-hidden="true"></span>
      </div> <!-- .events -->
    </div> <!-- .events-wrapper -->

    <ul class="cd-timeline-navigation">
      <li><a href="#0" class="prev inactive">Prev</a></li>
      <li><a href="#0" class="next">Next</a></li>
    </ul> <!-- .cd-timeline-navigation -->
  </div> <!-- .timeline -->

  <div class="events-content">
    <ol>
      <% @article.article_milestones.each_with_index do |milestone, i| %>
        <% if i == 0 %>
          <%= content_tag(:li, :class => "selected", 'data-date' => milestone.date_occurred.strftime("%d/%m/%Y")) do -%>
            <h2>Horizontal Timeline</h2>
            <em><%= milestone.date_occurred.strftime("%b %d, %Y") %></em>
            <p><%= Milestone.find(milestone.milestone_id).title %></p>
          <% end %>
        <% else %>
          <%= content_tag(:li, 'data-date' => milestone.date_occurred.strftime("%d/%m/%Y")) do -%>
            <em><%= milestone.date_occurred.strftime("%b %d, %Y") %></em>
            <p><%= Milestone.find(milestone.milestone_id).title %></p>
          <% end %>
        <% end %>
      <% end %>
